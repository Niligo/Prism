<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/about_niligo"
        android:layout_above="@+id/imageView8" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:src="@drawable/about_logo"
        android:scaleType="fitStart"
        android:layout_above="@+id/textView4" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prism"
        android:id="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="@color/color9"
        android:layout_above="@+id/version"
        android:layout_marginBottom="30dp" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.0"
        android:id="@+id/version"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/color1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView7" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(c) 2016 Niligo co. All rights reserved."
        android:id="@+id/textView7"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/color1"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/site"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/about_powered"
        android:layout_marginBottom="20dp" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POWERED BY"
        android:id="@+id/textView8"
        android:textSize="@dimen/text_tiny"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView10" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="info@niligo.com"
        android:id="@+id/email"
        android:textSize="@dimen/text_normal"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView8"
        android:background="@drawable/background_rect1"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <com.niligo.prism.widget.NPTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="www.niligo.com"
        android:id="@+id/site"
        android:textSize="@dimen/text_normal"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/email"
        android:background="@drawable/background_rect1"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
</RelativeLayout>
